{
  "name": "@pct-org/graphql-api",
  "version": "0.0.1",
  "description": "GraphQL API for the PCT environment",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pct-org/graphql-api.git"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "start": "node dist/main.js",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev:watch": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\""
  },
  "dependencies": {
    "@hapi/joi": "^16.0.0",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/graphql": "^6.5.1",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/platform-fastify": "^6.6.7",
    "@pct-org/mongo-models": "^0.0.2",
    "apollo-server-fastify": "^2.9.3",
    "dotenv": "^8.1.0",
    "graphql": "^14.5.4",
    "mongoose": "^5.7.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "type-graphql": "^0.17.5"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "4.16.1",
    "@types/hapi__joi": "^15.0.4",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.4",
    "@types/supertest": "2.0.7",
    "prettier": "1.17.0",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3"
  }
}
